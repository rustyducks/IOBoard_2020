    "version": "0.2.0",
    "configurations": [
        {
            "name": "Black Magic Probe",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "cwd": "${workspaceRoot}",
            "MIMode": "gdb",
            "targetArchitecture": "arm",
            "logging": {
                "engineLogging": true
            },
            "program": "${workspaceRoot}/build/testeur.elf",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "customLaunchSetupCommands": [
                {"text": "cd ${workspaceRoot}/build"},
                {"text": "target extended-remote /dev/bmp_gdb"},
                {"text": "monitor swdp_scan"},
                {"text": "attach 1"},
                {"text": "file testeur.elf"},
                {"text": "load"},
                {"text": "cd ${workspaceRoot}"},
                {"text": "set mem inaccessible-by-default off"},
                {"text": "break main"}
              ]
        }



    ]
}
